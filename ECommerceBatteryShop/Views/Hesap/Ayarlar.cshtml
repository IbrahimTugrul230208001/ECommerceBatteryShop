@model ECommerceBatteryShop.Models.ChangePasswordViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Şifre Değiştir";
}

<section class="bg-gray-50 py-12">
    <div class="mx-auto max-w-3xl px-4 sm:px-6 lg:px-8">
        <div class="mb-6 flex items-center justify-between">
            <div>
                <p class="text-sm font-semibold uppercase tracking-wide text-amber-500">Hesap</p>
                <h1 class="mt-1 text-2xl font-bold text-gray-900">Şifrenizi değiştirin</h1>
                <p class="mt-1 text-sm text-gray-600">Güvenliğiniz için güçlü bir şifre kullanın.</p>
            </div>
            <a href="/Hesap/Profil" class="inline-flex items-center gap-2 rounded-full bg-amber-300 px-5 py-2.5 text-sm font-semibold text-gray-900 shadow-sm transition hover:bg-amber-400">
                Profilime dön
            </a>
        </div>

        @if (TempData["SuccessMessage"] is string success)
        {
            <div class="mb-4 rounded-lg border border-green-200 bg-green-50 p-4 text-sm text-green-800">@success</div>
        }
        @if (TempData["ErrorMessage"] is string error)
        {
            <div class="mb-4 rounded-lg border border-red-200 bg-red-50 p-4 text-sm text-red-800">@error</div>
        }

        <section id="security" class="rounded-2xl bg-white p-6 shadow-sm ring-1 ring-black/5">
            <div class="flex flex-wrap items-center justify-between gap-4">
                <div>
                    <h2 class="text-lg font-semibold text-gray-900">Güvenlik ve Şifre</h2>
                    <p class="text-sm text-gray-500">Şifrenizi güncelleyin.</p>
                </div>
            </div>

            <form asp-action="ChangePassword" asp-controller="Hesap" method="post" class="mt-6 space-y-6" novalidate>
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-sm text-red-600"></div>

                <div>
                    <label asp-for="CurrentPassword" class="block text-sm font-medium text-gray-700">Mevcut şifre</label>
                    <input asp-for="CurrentPassword" class="mt-2 w-full rounded-xl border border-gray-200 bg-white px-4 py-3 text-sm text-gray-900 shadow-sm focus:border-amber-300 focus:outline-none focus:ring-2 focus:ring-amber-200" />
                    <span asp-validation-for="CurrentPassword" class="text-xs text-red-600"></span>
                </div>
                <div class="grid gap-6 md:grid-cols-2">
                    <div>
                        <label asp-for="NewPassword" class="block text-sm font-medium text-gray-700">Yeni şifre</label>
                        <input asp-for="NewPassword" class="mt-2 w-full rounded-xl border border-gray-200 bg-white px-4 py-3 text-sm text-gray-900 shadow-sm focus:border-amber-300 focus:outline-none focus:ring-2 focus:ring-amber-200" />
                        <span asp-validation-for="NewPassword" class="text-xs text-red-600"></span>
                    </div>
                    <div>
                        <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700">Yeni şifre (tekrar)</label>
                        <input asp-for="ConfirmPassword" class="mt-2 w-full rounded-xl border border-gray-200 bg-white px-4 py-3 text-sm text-gray-900 shadow-sm focus:border-amber-300 focus:outline-none focus:ring-2 focus:ring-amber-200" />
                        <span asp-validation-for="ConfirmPassword" class="text-xs text-red-600"></span>
                    </div>
                </div>

                <div class="flex flex-wrap items-center justify-end gap-3">
                    <a href="/Hesap/Profil" class="text-sm font-medium text-gray-500 transition hover:text-gray-700">İptal</a>
                    <button type="submit" class="inline-flex items-center gap-2 rounded-full bg-amber-300 px-5 py-2.5 text-sm font-semibold text-gray-900 shadow-sm transition hover:bg-amber-400">Şifreyi Güncelle</button>
                </div>
            </form>
        </section>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
