@model ForgotPasswordViewModel
@{
    Layout = "_AccountLayout";
    var successMessage = ViewBag.SuccessMessage as string;
    var errorMessage = ViewBag.ErrorMessage as string;
}

<div class="space-y-4">
    @if (!string.IsNullOrWhiteSpace(successMessage))
    {
        <div class="rounded-lg border border-green-200 bg-green-50 p-4 text-sm text-green-800">
            @successMessage
        </div>
    }

    @if (!string.IsNullOrWhiteSpace(errorMessage))
    {
        <div class="rounded-lg border border-red-200 bg-red-50 p-4 text-sm text-red-800">
            @errorMessage
        </div>
    }

    <form asp-action="SifreUnuttum" method="post" class="space-y-4" novalidate>
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-sm text-red-600"></div>
        <div>
            <div class="flex items-center justify-between">
                <label asp-for="Email" class="block text-sm font-medium text-gray-900">E-posta</label>
                <span asp-validation-for="Email" class="text-xs text-red-600"></span>
            </div>
            <input asp-for="Email" placeholder="E-posta adresi..."
                   class="mt-1 w-full rounded-lg border border-gray-300 p-3 text-black placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-yellow-400" />
        </div>

        <button type="submit"
                class="mt-3 w-full cursor-pointer rounded-full bg-amber-300 py-3 font-semibold text-black shadow-sm transition hover:bg-amber-400 hover:shadow-lg active:bg-amber-500">
            <span>Åžifremi Yenile</span>
        </button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
