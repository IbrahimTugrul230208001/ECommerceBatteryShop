@model ECommerceBatteryShop.Models.ProductListViewModel

@{
    ViewData["Title"] = "Products";
}

<h1 class="text-2xl font-bold mb-4">Products</h1>

<form method="get" class="mb-6 flex flex-wrap gap-4">
    <input type="number" step="0.01" name="minPrice" value="@Model.MinPrice" placeholder="Min Price" class="border p-2 rounded" />
    <input type="number" step="0.01" name="maxPrice" value="@Model.MaxPrice" placeholder="Max Price" class="border p-2 rounded" />
    <input type="number" step="0.1" name="minRating" value="@Model.MinRating" placeholder="Min Rating" class="border p-2 rounded" />
    <button type="submit" class="px-4 py-2 bg-amber-300 text-gray-900 rounded">Filter</button>
</form>

<div class="grid grid-cols-1 md:grid-cols-3 gap-4">
@foreach (var product in Model.Products)
{
    <div class="border rounded p-4">
        <img src="@product.ImageUrl" alt="@product.Name" class="h-32 w-full object-contain mb-2" />
        <h3 class="font-semibold">@product.Name</h3>
        <p class="text-gray-700">@product.Price.ToString("C")</p>
        <p class="text-yellow-500">Rating: @product.Rating</p>
    </div>
}
</div>
