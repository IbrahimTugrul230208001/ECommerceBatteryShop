<section class="max-w-4xl mx-auto px-6 py-12">
    <h1 class="text-3xl font-bold text-gray-900 mb-6">İletişim</h1>

    <!-- Bilgi Grid -->
    <div class="grid md:grid-cols-2 gap-8 mb-12">
        <!-- Adres -->
        <div>
            <h2 class="text-xl font-semibold text-gray-800 mb-2">Ofisimiz</h2>
            <p class="text-gray-600">Battery Shop A.Ş.</p>
            <p class="text-gray-600">Teknoloji Caddesi No:123</p>
            <p class="text-gray-600">İstanbul, Türkiye</p>
        </div>

        <!-- İletişim Kanalları -->
        <div>
            <h2 class="text-xl font-semibold text-gray-800 mb-2">Bize Ulaşın</h2>
            <p class="text-gray-600">📞 +90 (212) 123 45 67</p>
            <p class="text-gray-600">✉️ destek@batteryshop.com</p>
            <p class="text-gray-600">Çalışma Saatleri: Pzt–Cum 09:00 – 18:00</p>
        </div>
    </div>

    <!-- İletişim Formu -->
    <form class="bg-gray-50 p-6 rounded-2xl shadow-sm space-y-4">
        <div>
            <label for="ad" class="block text-sm font-medium text-gray-700">Ad Soyad</label>
            <input type="text" id="ad" name="ad"
                   class="mt-1 w-full border-gray-300 rounded-md shadow-sm focus:ring focus:ring-amber-300" required>
        </div>

        <div>
            <label for="email" class="block text-sm font-medium text-gray-700">E-posta</label>
            <input type="email" id="email" name="email"
                   class="mt-1 w-full border-gray-300 rounded-md shadow-sm focus:ring focus:ring-amber-300" required>
        </div>

        <div>
            <label for="mesaj" class="block text-sm font-medium text-gray-700">Mesajınız</label>
            <textarea id="mesaj" name="mesaj" rows="4"
                      class="mt-1 w-full border-gray-300 rounded-md shadow-sm focus:ring focus:ring-amber-300" required></textarea>
        </div>

        <!-- CTA -->
        <button type="submit"
                class="w-full bg-amber-300 text-gray-900 font-semibold py-2 px-4 rounded-md shadow hover:bg-amber-400 transition">
            Mesaj Gönder
        </button>
    </form>
</section>
