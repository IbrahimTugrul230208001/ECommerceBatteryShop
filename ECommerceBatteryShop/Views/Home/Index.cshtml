<div class="bg-gray-100">
    <!-- Hero Section -->
    <section class="bg-cover bg-center h-96 flex items-center justify-center text-white" style="background-image: url('/img/battery.jpg');">
        <div class="text-center bg-black bg-opacity-50 p-8 rounded">
            <h1 class="text-4xl font-bold mb-4">Power Your Life</h1>
            <p class="mb-6">Premium batteries delivered to your door.</p>
            <a href="/Products" class="bg-yellow-500 hover:bg-yellow-600 text-black font-semibold py-2 px-4 rounded">Shop Now</a>
        </div>
    </section>

    <!-- Features Section -->
    <section class="container mx-auto py-16">
        <h2 class="text-2xl font-bold text-center mb-12">Why Choose Us?</h2>
        <div class="grid md:grid-cols-3 gap-8">
            @foreach (var feature in features)
            {
                <div class="text-center p-6 bg-white rounded shadow">
                    <div class="mb-4 text-5xl">@feature.Icon</div>
                    <h3 class="text-xl font-semibold mb-2">@feature.Title</h3>
                    <p class="text-gray-600">@feature.Description</p>
                </div>
            }
        </div>
    </section>

    <!-- Testimonials Section -->
    <section class="bg-white py-16">
        <h2 class="text-2xl font-bold text-center mb-12">What Our Customers Say</h2>
        <div class="container mx-auto grid md:grid-cols-3 gap-8">
            @foreach (var t in testimonials)
            {
                <div class="p-6 bg-gray-100 rounded shadow">
                    <p class="mb-4 italic">&ldquo;@t.Quote&rdquo;</p>
                    <p class="font-semibold">- @t.Author</p>
                </div>
            }
        </div>
    </section>

    <!-- Call to Action -->
    <section class="bg-yellow-500 py-16">
        <div class="container mx-auto text-center">
            <h2 class="text-2xl font-bold mb-4">Stay Charged with Our Newsletter</h2>
            <p class="mb-6">Get updates on new products and special offers.</p>
            <form class="flex justify-center">
                <input type="email" placeholder="Enter your email" class="px-4 py-2 rounded-l" />
                <button type="submit" class="bg-gray-900 text-white px-6 py-2 rounded-r">Subscribe</button>
            </form>
        </div>
    </section>
</div>
