@model ECommerceBatteryShop.Models.ThreeDSStatusViewModel
@{
    ViewData["Title"] = "3D Secure Ödeme";
}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h1 class="h4 mb-3">3D Secure Sonucu</h1>
                    <div class="alert @(Model.Success ? "alert-success" : "alert-danger")" role="alert">
                        @Model.Message
                    </div>
                    <p class="text-muted">Ana sayfaya yönlendirme birkaç saniye sürebilir. Beklemek istemezseniz aşağıdaki butona tıklayın.</p>
                    <a href="/" class="btn btn-primary">Ana Sayfaya Dön</a>
                </div>
            </div>
        </div>
    </div>
</div>
@if (Model.Success)
{
    <script>
        setTimeout(function(){ window.location.href = '/'; }, 4000);
    </script>
}
